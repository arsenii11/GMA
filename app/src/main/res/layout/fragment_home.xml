<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainlay"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:src="@drawable/glei"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.gma.helpclasses.SquaredConstraintLayout
                android:id="@+id/box5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                    <ImageButton
                        android:id="@+id/imageButtonBook"
                        style="@style/DefaultButton"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:padding="40dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/book"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />




            </com.example.gma.helpclasses.SquaredConstraintLayout>

            <com.example.gma.helpclasses.SquaredConstraintLayout
                android:id="@+id/box6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">
                <ImageButton
                    android:id="@+id/imageButtonGroup"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="40dp"
                    android:scaleType="fitCenter"
                    style="@style/DefaultButton"
                    android:src="@drawable/group"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </com.example.gma.helpclasses.SquaredConstraintLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="340dp"
                android:layout_height="180dp"
                android:layout_centerInParent="true"
                android:background="@drawable/back1"
                android:radius="30dp">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/home_t_1"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/textView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.141" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="50dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/textView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="@string/home_t_2"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.503"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.gma.helpclasses.SquaredConstraintLayout
            android:id="@+id/box7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">


            <ImageButton
                android:id="@+id/imageButtonDoc"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="40dp"
                android:scaleType="fitCenter"
                style="@style/DefaultButton"
                android:src="@drawable/page"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />




        </com.example.gma.helpclasses.SquaredConstraintLayout>

        <com.example.gma.helpclasses.SquaredConstraintLayout
            android:id="@+id/box8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">
            <ImageButton
                android:id="@+id/imageButtonTasks"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="40dp"
                android:scaleType="fitCenter"
                style="@style/DefaultButton"
                android:src="@drawable/okk"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.example.gma.helpclasses.SquaredConstraintLayout>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>